RewriteEngine On
RewriteBase /store-php/

# Redirect / to /en as default language
RewriteRule ^$ /en [R=302,L]

# Ignore existing files and directories
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# Rewrite URLs to index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# Rewrite language URLs (example: /en, /lv)
RewriteRule ^(en|lv)$ index.php?lang=$1 [QSA,L]
